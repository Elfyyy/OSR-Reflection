function TReflectObject.Find(ObjType: TObjectType; Distance: Integer = 103; V: TVariantArray): Boolean;
var
  Temp: TReflectObjectArray;
begin
  Temp.Get(ObjType, Distance, V);
  if Length(Temp) = 0 then
    Exit;
  Result := True;
  Self := Temp[0];
end;

